<meta name="viewport" content="width=device-width">
<style type="text/css">
    body {
        background-color: #222;
        color: #FDFDFD;
        font: 14px sans-serif;
    }

    .content {
        background-color: #222;
        color: #FDFDFD;
        height: 96%;
        font-size: 15px;
        line-height: 1.2;
        text-align: center;
    }

    form {
        padding-top: 80px;
    }

    input[name=password] {
        width: 75%;
        font-size: 2em;
        color: #FDFDFD;
        background-color: #202020;
        border: 1px solid #777;
        padding: 5px;
    }

    input[name=password]:focus {
        outline: none;
    }

    input[type=submit] {
        margin-top: 25px;
        padding: 20px;
        border: 1px solid;
        background-color: #222 ;
        color: #999;
        font-size: 2em;
        border-radius: 5px;
    }

    input[type=submit]:hover {
        color: #444;
    }  


    footer {
        border-top: 1px solid #777;
        height: 25px;
        width: 100%;
        text-align: center;
        padding-top: 5px;
   
    }

    footer a {
        color: #999;
        font: 14px sans-serif;
        text-decoration: none;
        margin: 14px;
    }

    footer a:hover {
        color: #F2F4F8;
        text-decoration: dotted;
    }
</style>
<div class=content>
    <form action="/<%= doomp.name %>/login" method=post>
        <input type=password name=password><br>
        <input type=submit value=login>
    </form>
</div>
<footer>
    <a href='/'>new</a>
</footer>
